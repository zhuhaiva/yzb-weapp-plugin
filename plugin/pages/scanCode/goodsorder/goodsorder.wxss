}

.goods-item-btn.disabled {
  background-color: #ddd;
}

.empty {
  width: 100%;
  padding-top: 35%;
}

.goods-footer {
  position: fixed;
  z-index: 200;
  bottom: calc(env(safe-area-inset-bottom));
  left: 30rpx;
  right: 30rpx;
  background-color: #333;
  height: 120rpx;
  border-radius: 60rpx;
  display: flex;
  justify-content: space-between;
  padding-left: 30rpx;
  overflow: hidden;
}

.goods-footer-left {
  width: calc(100% - 180rpx);
  display: flex;
  align-items: center;
}

.goods-footer-btn {
  height: 120rpx;
  background-color: #fabc36;
  border-right: 0 60rpx 60rpx 0;
  width: 180rpx;
  color: #000;
  text-align: center;
  line-height: 120rpx;
}

.goods-footer-btn.disabled {
  background-color: transparent;
  color: #999;
  pointer-events: none;
}

.goods-icon {
  color: #fff;
  position: relative;
  align-items: center;
}

.goods-detail swiper {
  height: 436rpx;
}

.goods-detail-caption {
  padding: 20rpx 30rpx;
}

.goods-detail-name {
  font-size: 36rpx;
  padding: 0rpx 0rpx 20rpx 0rpx;
}

.goods-detail-btngroup {
  padding: 30rpx 0 20rpx 0;
  border-top: 2rpx solid #e6e6e6;
  display: flex;
  justify-content: space-between;
}

.swiper-item {
  height: 100%;
}

.shopCarBody {
  padding: 20rpx 30rpx 180rpx 30rpx;
  max-height: 1000rpx;
  overflow-y: auto;
