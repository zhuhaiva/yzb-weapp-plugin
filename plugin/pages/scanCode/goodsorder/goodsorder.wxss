  right: 0;
  top: 0;
}

.goods-item-text {
  font-size: 24rpx;
  color: #a7a7a7;
  margin-top: 6rpx;
}

.goods-item-btngourp {
  position: absolute;
  right: 20rpx;
  bottom: 16rpx;
  display: flex;
  justify-content: space-between;
}

.goods-item-num {
  width: 60rpx;
  text-align: center;
  height: 44rpx;
  line-height: 44rpx;
}

.goods-item-btn {
  padding: 0;
  border-radius: 100%;
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.goods-item-btn.add {
  background-color: #fabc36;
  color: #000;
  font-size: 30rpx;
  font-weight: bold;
}

.goods-item-btn.rem {
  background-color: #fff;
  border: 3rpx solid #fabc36;
  color: #fabc36;
  font-size: 30rpx;
