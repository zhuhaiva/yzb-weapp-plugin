/* plugin/components/goods/goods.wxss */
@import "../../../app.wxss";
page {
  height: 100%;
  overflow: hidden;
}

view {
  box-sizing: border-box;
}

.weui-navigation-bar view,
weui-navigation-bar {
  box-sizing: content-box;
}

.bodybg {
  height: 300rpx;
  position: absolute;
  top: 0;
  width: 100%;
}

.bodybg::before {
  position: absolute;
  background-color: rgba(0, 0, 0, 0.4);
  content: "";
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 1;
}

.body {
  border-radius: 30rpx 30rpx 0 0;
  background-color: #fff;
  position: relative;
  z-index: 1;
  overflow: hidden;
  box-shadow: 0rpx 0rpx 10rpx rgba(0, 0, 0, 0.1);
  padding-bottom: calc(env(safe-area-inset-bottom) + 140rpx);
  box-sizing: border-box;
  height: 100%;
}

.store-info {
  background-color: #fff;
  padding: 30rpx;
  border-bottom: 2rpx solid #f8f8f8;
}

.store-name {
  font-size: 34rpx;
  font-weight: 700;
  width: calc(100% - 240rpx);
}

.getMyOrder {
  color: #09c;
  font-size: 32rpx;
}

.voucherList {
  width: 100%;
  display: inline-block;
}

.voucher-item {
  float: left;
  border-radius: 6rpx;
  color: #fff;
  display: inline-block;
  overflow: hidden;
  background: #ff6050;
}

.voucher-line {
  position: relative;
  border-left: 3rpx dashed #fff;
}
.voucher-line::before,
.voucher-line::after {
  width: 8rpx;
  height: 8rpx;
  left: -6rpx;
  border-radius: 50%;
  background-color: #fff;
  content: "";
  display: block;
  position: absolute;
  border-top-left-radius: 50%;
  border-top-right-radius: 50%;
  border-bottom-right-radius: 50%;
  border-bottom-left-radius: 50%;
}

.voucher-line::before {
  top: -5rpx;
}

.voucher-line::after {
  bottom: -5rpx;
}

.voucher-amount {
  padding: 6rpx 20rpx;
}

.voucher-amount text {
  font-size: 20rpx;
  transform: scale(0.4);
}

.voucher-btn {
  background: #ff6050;
  padding: 6rpx 20rpx;
}

.goods-content {
  height: 100%;
}

.goods-body-title {
  background-color: #fff;
  padding: 32rpx;
  border-bottom: 2rpx solid #f6f6f6;
}

.goods-body {
  height: calc(100% - 112rpx);
