}

.goods-item-img {
  border-radius: 20rpx;
  overflow: hidden;
  width: 220rpx;
  height: 200rpx;
}

.goods-item-img .van-image {
  display: block !important;
}

.goods-item-body {
  width: calc(100% - 160rpx);
