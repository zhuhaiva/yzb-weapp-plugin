}

.seatName {
  text-align: center;
  padding: 40rpx 30rpx;
}

textarea {
  width: 100%;
  background-color: #f8f8f8;
  border-radius: 16rpx;
  padding: 20rpx;
  height: 200rpx;
}

.goods-header {
  display: flex;
  justify-content: space-between;
}

.VerticalNav.nav {
  width: 180rpx;
  white-space: initial;
  background-color: #f8f8f8;
}

.VerticalNav.nav .cu-item {
  width: 100%;
  text-align: center;
  background-color: #f8f8f8;
  margin: 0;
  border: none;
  height: auto;
  line-height: normal;
  position: relative;
  display: block;
  color: #868686;
  padding: 30rpx 20rpx;
  align-items: center;
  font-size: 24rpx;
}

.VerticalNav.nav .cu-item.cur {
  background-color: #fff;
  color: #333;
  font-size: 24rpx;
}

.VerticalBox {
  display: flex;
  height: calc(100% - 180rpx);
  box-sizing: border-box;
  overflow: hidden;
}

.toptips {
  top: 100px;
}

.voucherListBox {
  background: #fff;
  background-image: linear-gradient(to bottom right, #fd3a42, #fd0c39);
}

.voucherListBox-title {
  font-size: 48rpx;
}

.voucher-card-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.voucher-card-item {
  border-radius: 12rpx;
  background-color: #fff;
  margin-bottom: 16rpx;
  border: 2rpx solid #fff;
  position: relative;
  overflow: hidden;
}

.voucher-card-item.disabled {
  filter: grayscale(1);
  pointer-events: none;
}

.voucher-card-item.active::after {
  content: "选中";
  display: block;
  transform: rotate(45deg);
  position: absolute;
  top: 12rpx;
  right: -14rpx;
