  font-size: 24rpx;
}
.voucher-card-item.active::before {
  content: "";
  display: block;
  position: absolute;
  width: 0;
  height: 0;
  top: 0;
  right: 0;
  border-top: 80rpx solid #fa5e3b;
  border-left: 80rpx solid transparent;
}

.voucher-card-item.active {
  border-color: #fa5e3b;
}

.voucher-card-title {
  height: 82rpx;
