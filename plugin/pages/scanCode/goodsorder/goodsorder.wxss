  font-size: 34rpx;
  font-weight: 700;
  font-family: "DINPro-Medium";
}

.goods-item-price3 {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  position: relative;
  top: 10rpx;
  font-family: "DINPro-Medium";
}

.goods-item-price3::before,
.goods-item-price2::before,
.goods-item-price::before {
  content: "￥";
  display: inline-block;
