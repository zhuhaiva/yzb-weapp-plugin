.VerticalBox {
  display: flex;
  height: calc(100% - 116rpx);
  padding-bottom: 140rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.toptips {
  top: 100px;
}

.voucherListBox {
  background: #fff;
  background-image: linear-gradient(to bottom right, #fd3a42, #fd0c39);
}

.voucherListBox-title {
  font-size: 48rpx;
}

.voucher-card-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.voucher-card-item {
  border-radius: 12rpx;
  background-color: #fff;
  margin-bottom: 16rpx;
  border: 2rpx solid #fff;
  position: relative;
  overflow: hidden;
  display: flex;
}

.voucher-card-item.disabled {
  filter: grayscale(1);
  pointer-events: none;
}

.voucher-card-item.active::after {
  content: "选中";
  display: block;
  transform: rotate(45deg);
  position: absolute;
  top: 12rpx;
  right: -14rpx;
  color: #fff;
  width: 80rpx;
  text-align: center;
  font-size: 24rpx;
}

.voucher-card-item.active::before {
  content: "";
  display: block;
  position: absolute;
  width: 0;
  height: 0;
  top: 0;
  right: 0;
  border-top: 80rpx solid #fa5e3b;
  border-left: 80rpx solid transparent;
}

.voucher-card-item.active {
  border-color: #fa5e3b;
}

.voucher-card-title {
  /* height: 82rpx;
  line-height: 82rpx; */
}

.voucher-card-itemleft {
  width: 180rpx;
  text-align: center;
}

.voucher-card-itemright {
  width: calc(100% - 180rpx);
  padding: 0 30rpx;
}

.voucher-card-faceValue {
  font-size: 52rpx;
  font-weight: 500;
}

.voucher-card-condition {
  font-size: 28rpx;
  color: #999;
}

.voucher-take-btn {
  color: #fd0c39;
  font-weight: 700;
  background: #fff;
}

.usedEVTag {
  background-color: #fa5e3b;
  color: #fff;
  border-radius: 10rpx;
  font-size: 24rpx;
  padding: 6rpx 10rpx;
}

.redText {
  color: #fa5e3b;
}

.redbag {
  width: 40rpx;
  height: 40rpx;
  position: relative;
  top: 10rpx;
  margin-right: 10rpx;
}

.submit-storename {
  padding: 0 16rpx 16rpx 16rpx;
  font-size: 32rpx;
  font-weight: 700;
  border-bottom: 2rpx solid #f6f6f6;
}

.van-submit-bar .van-button {
  border-color: #fabc36;
  background-color: #fabc36;
  color: #000;
}

.van-submit-bar .van-submit-bar__price {
  color: #f85027;
  font-weight: 700;
}

.conten-empty {
  top: -50rpx;
}

.sku {
  min-height: 300rpx;
  box-sizing: border-box;
  padding: 34rpx;
}

.sku .title {
  font-size: 40rpx;
  margin-bottom: 28rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.sku .tip {
  font-size: 26rpx;
  font-weight: 500;
  color: #898989;
  margin-bottom: 24rpx;
}

.sku .list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.sku .list .item {
  box-sizing: border-box;
  width: 176rpx;
  height: 64rpx;
  color: #323232;
  font-size: 24rpx;
  text-align: center;
  line-height: 64rpx;
  border-radius: 32rpx;
  background: #F8F8F8;
  margin-bottom: 18rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.sku .list .selected {
  box-sizing: border-box;
  color: #FF0F00;
  border: 1px solid #FF0F00;
  background: #FFF2F0;
}

.btm-btn {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.member-card-list {
  display: flex;
  overflow-x: auto;
  overflow-y: hidden;
}

.member-card-item {
  width: 300rpx;
  max-width: 300rpx;
  min-width: 300rpx;
  background-color: #f6f6f6;
  padding: 16rpx 30rpx;
  border-radius: 12rpx;
  margin-right: 12rpx;
  color: #000;
  border: 2rpx solid #f6f6f6;
}

.member-card-item.active {
  border: 2rpx solid #ee0a24;
  color: #ee0a24;
  background-color: #f5ebec;
}

.member-card-item.active view {
  color: #ee0a24 !important;
}