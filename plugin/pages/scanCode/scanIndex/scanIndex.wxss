@import "./scanIndex.skeleton.wxss";
@import "../../../app.wxss";

page {
  background-color: #F3F3F3;
}

view {
  box-sizing: border-box;
}

.weui-navigation-bar view,
weui-navigation-bar {
  box-sizing: content-box;
}

.block {
  border-radius: 16rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
  background-color: #fff;
}

.block-title {
  font-weight: 600;
  padding-bottom: 10rpx;
}

.pageIndex {
  /* padding: 20rpx 30rpx; */
}

.t_title {
  margin-bottom: 12rpx;
}

.banner {
  width: 100%;
  height: 616rpx;
  background-color: #b1b1b1;
  overflow: hidden;
  position: relative;
}

.location {
  position: absolute;
  left: 32rpx;
  width: 686rpx;
  height: 100rpx;
  opacity: 1;
  background: linear-gradient(90deg, #FEEDD9 0%, #F6D8B0 100%);
  box-sizing: border-box;
  bottom: 20rpx;
  border-radius: 16rpx 16rpx 0 0;
  justify-content: space-between;
  display: flex;
  padding: 0 40rpx;
  font-size: 32rpx;
}

.location view {
  align-self: center;
}

.location .fa-map-marker{
  align-self: center;
  margin-right: 16rpx;
  font-size: 36rpx;
  color: #A75200;
}

.cosume {
  width: 560rpx;
  padding: 16rpx 30rpx;
  border-radius: 60rpx;
  background-color: #fff;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
  position: absolute;
  bottom: -46rpx;
  left: calc(50% - 280rpx);
  display: flex;
  align-items: center;
}

.cosume .iconfont {
  color: rgb(243, 107, 107);
  margin-right: 8rpx;
}

.main {
  border-radius: 16rpx 16rpx 0 0;
  overflow: hidden;
  margin-top: -20rpx;
  background: linear-gradient(180deg, #FFFFFF 2%, #F3F3F3 15%);
  position: relative;
  z-index: 1;
  padding: 32rpx;
}

.b-block {
  display: grid;
  grid-template-columns: repeat(2, 1fr); /* 一行分成两列 */
  gap: 20rpx; /* 设置列与行的间距，可选 */
}

.b-list {
  width: 100%;
  height: 352rpx;
  border-radius: 12rpx;
  padding: 12rpx;
  background-color: #fff;
  position: relative;
  box-shadow: 0rpx 0rpx 20rpx rgba(0, 0, 0, .1);
}

.b-list.disabled {
  pointer-events: none;
  filter: grayscale(1);
}

.b-list-body {
  position: relative;
  z-index: 2;
  padding: 10rpx 24rpx;
}

.b-text {
  font-size: 34rpx;
  color: #000;
  text-align: left;
  font-size: 700;
}

.b-subtitle {
  font-size: 26rpx;
}

.b-list-bgImg {
  position: absolute;
  top: 12rpx;
  bottom: 12rpx;
  left: 12rpx;
  right: 12rpx;
}

.b-list-bgImg image {
  width: 100%;
  height: 100%;
}

.van-action-sheet__item {
  width: 100% !important;
}

.seatName {
  text-align: center;
  padding: 40rpx 30rpx;
}

.price_title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}