<van-tabs active="{{ activeName }}" bind:change="onTabsChange" title-active-color="#fdba74" color="#fdba74" line-width="16px">
    <van-tab title="美团" name="meituan"></van-tab>
    <van-tab title="抖音" name="douyin"></van-tab>
</van-tabs>
<view class="page-body" style="height: calc(100vh - {{safeArea.navTotalHeight * 2}}rpx - 100rpx);">
    <scroll-view type="custom" scroll-y style="height: 100%; padding: 16rpx 16rpx 0;" class="custom-scroll">
        <meituan roomCode="{{roomCode}}" mobile="{{mobile}}" wx:if="{{activeName === 'meituan'}}"></meituan>
        <douyin roomCode="{{roomCode}}" mobile="{{mobile}}" wx:elif="{{activeName === 'douyin'}}"></douyin>
    </scroll-view>
</view>